<!doctype html>
<html>
  <head>
    <link rel="stylesheet" type="text/css" href="../../stylesheets/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="../../stylesheets/style.css">
    <link rel="stylesheet" href="http://netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css">
    <style> 
    h1{ margin-bottom: 40px; }
    #key { position: absolute; top: 8px; right: 10px; width: 20%; z-index: 1; }
    p { font-size: 20px; }
    form { margin-top: 15px; }
    </style>
  </head>

  <body>
    <div class="container-fluid">
      <div class="col-lg-9 col-md-8 col-sm-8 col-xs-8">
      <h1>Meetup Events This Week</h1>
      <% @events.each do |event| %>
        <p><a href="<%= event.url %>" target="_blank" style="color: rgb(<%= event.group.color %>); font-size: <%= event.group.font_size %>px; line-height: 0.9"/>
        <%= event.name %></a></p>
      <% end %>
      <form action="/events" method="POST">
      <button type="submit" class="btn btn-default">Get more events?</button>
      </form>

      <br />
      </div>

      <!--/////////// Group Key //////////-->
      <div id="key">
        <h2>Groups<h2>
        <% @groups.each do |group| %>
          <p><a href="http://www.meetup.com/<%= group.urlname %>/" target="_blank" style="color: rgb(<%= group.color %>)">
            <%= group.name %></a>
          </p>
        <% end %>
      </div>
      <!--/////////// End //////////-->
    </div>
    
  </body>
</html>

